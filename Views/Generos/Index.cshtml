@model IEnumerable<SequeMusic.Models.Genero>

@{
    ViewData["Title"] = "G√©neros Musicais";
}

<style>
    .genero-card {
        background-color: #f8f9fa;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        transition: all 0.3s ease;
        height: 100%;
    }

    .genero-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 8px 16px rgba(0,0,0,0.1);
    }

    .genero-titulo {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 10px;
        color: #343a40;
    }

    .card-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
    }

    .btn-criar {
        margin-bottom: 30px;
    }
</style>

<div class="container">
    <h1 class="text-center mb-4">üéµ G√©neros Musicais</h1>

    @if (User.IsInRole("Admin"))
    {
        <div class="text-center mb-4">
            <a class="btn btn-success btn-criar" asp-action="Create">
                <i class="bi bi-plus-circle"></i> Criar Novo G√©nero
            </a>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="genero-card h-100">
                    <div class="genero-titulo">@item.Nome</div>

                    <div class="card-actions mt-2">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-eye"></i>üëÅ Detalhes
                        </a>

                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="bi bi-pencil-square"></i>‚úèÔ∏è Editar
                            </a>
                            <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="bi bi-trash"></i>üóëÔ∏è Apagar
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
