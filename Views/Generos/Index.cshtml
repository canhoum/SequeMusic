<style>
    body {
        background-color: #ffffff; /* fundo branco global */
    }

    .genero-card {
        background-color: #ffffff;
        border: 1px solid #dee2e6;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        transition: box-shadow 0.2s ease;
        height: 100%;
    }

    .genero-card:hover {
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .genero-titulo {
        font-weight: 600;
        font-size: 1.2rem;
        color: #212529;
    }

    .genero-desc {
        font-size: 0.95rem;
        color: #6c757d;
    }

    .card-actions a {
        margin-right: 10px;
    }

    .btn-criar {
        margin-bottom: 30px;
    }
</style>

<div class="container">
    <h1 class="text-center mb-4">ðŸŽµ GÃ©neros Musicais</h1>

    <div class="text-center mb-4">
        <a class="btn btn-success btn-criar" asp-action="Create">âž• Criar Novo GÃ©nero</a>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="genero-card h-100">
                    <div class="genero-titulo">@item.Nome</div>
                    <div class="genero-desc mb-3">@item.Descricao</div>
                    <div class="card-actions">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                        <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
