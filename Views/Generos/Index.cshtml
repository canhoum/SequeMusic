@model IEnumerable<SequeMusic.Models.Genero>

@{
    ViewData["Title"] = "Gêneros";
}

<h1>Gêneros</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Criar Novo Gênero</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Descricao</td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
