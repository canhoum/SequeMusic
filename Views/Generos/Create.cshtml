@model SequeMusic.Models.Genero

@{
    ViewData["Title"] = "Adicionar Género Musical";
}

<style>
    body {
        background-color: #111827; /* mesmo fundo que nos artistas */
    }

    .genero-card {
        background-color: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(4px);
        border-radius: 20px;
        padding: 40px;
        margin-top: 50px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.2);
    }

    label {
        font-weight: 600;
        color: #1f2937;
    }

    input, textarea {
        border-radius: 8px;
    }

    h1 {
        font-weight: bold;
        color: #1f2937;
    }
</style>

<div class="container d-flex justify-content-center">
    <div class="col-md-8 genero-card">
        <h1 class="text-center mb-4">Criar Novo Género</h1>

        <form asp-action="Create">
            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label">Nome do Género</label>
                <input asp-for="Nome" class="form-control" placeholder="Ex: Hip Hop, Jazz, Pop..." />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Descricao" class="control-label">Descrição</label>
                <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Fala um pouco sobre este género..."></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success px-4">Criar</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">← Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
