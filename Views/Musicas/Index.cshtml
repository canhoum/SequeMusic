@model IEnumerable<SequeMusic.Models.Musica>
@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = User.IsInRole("Admin") ? "Todas as M√∫sicas" : "Top 10 Billboard";
}

<h2>@ViewData["Title"]</h2>

@if (User.IsInRole("Admin"))
{
    <div class="mb-3">
        <form method="get" class="row g-2">
            <div class="col-md-3">
                <select name="generoFiltro" class="form-select" asp-items="ViewBag.Generos">
                    <option value="">-- G√©nero --</option>
                </select>
            </div>
            <div class="col-md-3">
                <select name="artistaFiltro" class="form-select" asp-items="ViewBag.Artistas">
                    <option value="">-- Artista --</option>
                </select>
            </div>
            <div class="col-md-2">
                <input type="number" name="anoFiltro" class="form-control" placeholder="Ano" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">Filtrar</button>
            </div>
            <div class="col-md-2 text-end">
                <a asp-action="Create" class="btn btn-success w-100">+ Adicionar M√∫sica</a>
            </div>
        </form>
    </div>
}

<table class="table table-striped">
    <thead class="table-dark">
    <tr>
        <th>T√≠tulo</th>
        <th>√Ålbum</th>
        <th>Artista</th>

        @if (User.IsInRole("Admin"))
        {
            <th>Ano</th>
            <th>G√©nero</th>
            <th>Posi√ß√£o</th>
        }

        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Titulo</td>
            <td>@item.Album</td>
            <td>@item.Artista?.Nome_Artista</td>

            @if (User.IsInRole("Admin"))
            {
                <td>@item.AnoDeLancamento</td>
                <td>@item.Genero?.Nome</td>
                <td>
                    <form asp-action="AtualizarPosicao" method="post" class="d-flex gap-2">
                        <input type="hidden" name="id" value="@item.ID" />
                        <input type="number" name="posicao" class="form-control form-control-sm"
                               style="width: 60px;" value="@item.PosicaoBillboard" />
                        <button type="submit" class="btn btn-sm btn-outline-primary">Salvar</button>
                    </form>
                </td>
            }

            <td>
                <a asp-action="Details" asp-route-id="@item.ID" style="text-decoration: none; color: inherit;">
                    üëÅ Detalhes
                </a>

                @if (User.IsInRole("Admin"))
                {
                    <span> | </span>
                    <a asp-action="Edit" asp-route-id="@item.ID" style="text-decoration: none; color: inherit;">‚úèÔ∏è Editar</a>
                    <span> | </span>
                    <a asp-action="Delete" asp-route-id="@item.ID" style="text-decoration: none; color: inherit;">üóëÔ∏è Apagar</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>

