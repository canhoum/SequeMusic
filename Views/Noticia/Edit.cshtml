@model SequeMusic.Models.Noticia

@{
    ViewData["Title"] = "Editar Not√≠cia";
}

<div class="card shadow-sm p-4 rounded-3 border-0 bg-light-subtle" style="max-width: 800px; margin: auto;">
    <h3 class="fw-bold mb-4 text-center">@ViewData["Title"]</h3>

    @if (User.IsInRole("Admin"))
    {
        <form asp-action="Edit" asp-controller="Noticia" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Titulo" class="form-label fw-semibold">T√≠tulo</label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Resumo" class="form-label fw-semibold">Resumo</label>
                <textarea asp-for="Resumo" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Resumo" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImagemUrl" class="form-label fw-semibold">URL da Imagem</label>
                <input asp-for="ImagemUrl" class="form-control" />
                <span asp-validation-for="ImagemUrl" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Conteudo" class="form-label fw-semibold">Conte√∫do</label>
                <textarea asp-for="Conteudo" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Conteudo" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label for="Data_Publicacao" class="form-label fw-semibold">Data de Publica√ß√£o</label>
                <input asp-for="Data_Publicacao" class="form-control" type="date" />
                <span asp-validation-for="Data_Publicacao" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Fonte" class="form-label fw-semibold">Fonte</label>
                <input asp-for="Fonte" class="form-control" />
                <span asp-validation-for="Fonte" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label for="ArtistaId" class="form-label fw-semibold">Artista</label>
                <select asp-for="ArtistaId" class="form-select" asp-items="ViewBag.ArtistaId"></select>
                <span asp-validation-for="ArtistaId" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success px-4">üíæ Guardar</button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4">‚Üê Cancelar</a>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-warning mt-4 text-center">
            <strong>‚ö† Acesso restrito:</strong> Apenas administradores podem editar not√≠cias.
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-outline-primary">‚Üê Voltar √† lista</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
