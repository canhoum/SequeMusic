@model IEnumerable<SequeMusic.Models.Noticia>

@{
    ViewData["Title"] = "Lista de Notícias";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Nova Notícia</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Título</th>
        <th>Data</th>
        <th>Fonte</th>
        <th>Artista</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@item.Titulo</td>
            <td>@item.Data_Publicacao.ToString("dd/MM/yyyy")</td>
            <td>@item.Fonte</td>
            <td>@item.Artista?.Nome_Artista</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalhes</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>