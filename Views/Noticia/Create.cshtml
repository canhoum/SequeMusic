@model SequeMusic.Models.Noticia

@{
    ViewData["Title"] = "Criar Notícia";
}

<h2>@ViewData["Title"]</h2>

@if (User.IsInRole("Admin"))
{
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Titulo" class="control-label"></label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Conteudo" class="control-label"></label>
            <textarea asp-for="Conteudo" class="form-control"></textarea>
            <span asp-validation-for="Conteudo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Data_Publicacao" class="control-label"></label>
            <input asp-for="Data_Publicacao" class="form-control" type="date" />
            <span asp-validation-for="Data_Publicacao" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fonte" class="control-label"></label>
            <input asp-for="Fonte" class="form-control" />
            <span asp-validation-for="Fonte" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ArtistaId" class="control-label"></label>
            <select asp-for="ArtistaId" class="form-control" asp-items="@(ViewBag.ArtistaId ?? new SelectList(Enumerable.Empty<SelectListItem>()))">
                <option value="">-- Selecione um artista --</option>
            </select>
            <span asp-validation-for="ArtistaId" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <input type="submit" value="Criar" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </div>
    </form>
}
else
{
    <div class="alert alert-warning mt-4">
        <i class="fas fa-lock"></i> Apenas administradores podem criar notícias.
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-outline-primary">← Voltar à lista</a>
        </div>
    </div>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
