@model SequeMusic.Models.Noticia

@{
    ViewData["Title"] = Model.Titulo;
}

<style>
    body {
        background-color: #f7f8fa;
    }

    .hero-wrapper {
        position: relative;
        width: 100%;
        height: auto;
        max-height: 450px;
        overflow: hidden;
        border-bottom: 2px solid #dee2e6;
    }

    .hero-wrapper img {
        width: 100%;
        height: auto;
        max-height: 450px;
        object-fit: contain;
        object-position: center top;
        display: block;
        margin: 0 auto;
    }

    .noticia-container {
        max-width: 850px;
        margin: auto;
        background-color: #ffffff;
        padding: 2rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.07);
        border-radius: 0.75rem;
        margin-top: 2rem;
    }

    .noticia-titulo {
        font-size: 2.4rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 1rem;
    }

    .noticia-meta {
        font-size: 0.95rem;
        color: #6c757d;
        text-align: center;
        margin-bottom: 2rem;
    }

    .noticia-content {
        font-size: 1.1rem;
        line-height: 1.75;
        color: #212529;
        white-space: pre-line;
    }

    .noticia-content p {
        margin-bottom: 1.4rem;
    }

    .btn-back {
        display: flex;
        justify-content: center;
        margin-top: 2rem;
    }
</style>

@if (!string.IsNullOrEmpty(Model.ImagemUrl))
{
    <div class="hero-wrapper">
        <img src="@Model.ImagemUrl" alt="Imagem da Notícia" />
    </div>
}

<div class="container py-5">
    <div class="noticia-container">

        <h1 class="noticia-titulo">@Model.Titulo</h1>

        <div class="noticia-meta">
            Publicado em @Model.Data_Publicacao.ToString("dd MMM yyyy") —
            <strong>@Model.Artista?.Nome_Artista</strong><br />
            <small>Fonte: <em>@Model.Fonte</em></small>
        </div>

        <div class="noticia-content">
            <p>@Model.Conteudo</p>
        </div>

        <div class="btn-back">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                ← Voltar ao Início
            </a>
        </div>

    </div>
</div>
