@model SequeMusic.Models.Noticia

@{
    ViewData["Title"] = "Detalhes da Notícia";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Notícia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Model.Titulo</dd>

        <dt class="col-sm-2">Conteúdo</dt>
        <dd class="col-sm-10">@Model.Conteudo</dd>

        <dt class="col-sm-2">Data de Publicação</dt>
        <dd class="col-sm-10">@Model.Data_Publicacao.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Fonte</dt>
        <dd class="col-sm-10">@Model.Fonte</dd>

        <dt class="col-sm-2">Artista</dt>
        <dd class="col-sm-10">@Model.Artista?.Nome_Artista</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
