@model SequeMusic.Models.Artista

@{
    ViewData["Title"] = "Adicionar Novo Artista";
}

<h1>@ViewData["Title"]</h1>

<h4>Artista</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nome_Artista" class="control-label"></label>
                <input asp-for="Nome_Artista" class="form-control" />
                <span asp-validation-for="Nome_Artista" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Biografia" class="control-label"></label>
                <textarea asp-for="Biografia" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Biografia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Pais_Origem" class="control-label"></label>
                <input asp-for="Pais_Origem" class="form-control" />
                <span asp-validation-for="Pais_Origem" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Foto do Artista</label>
                <input name="fotoUpload" class="form-control" type="file" accept=".jpg,.jpeg,.png,.gif" required />
                <span asp-validation-for="Foto" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
