@model SequeMusic.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .login-card {
        max-width: 600px;
        margin: 100px auto;
        padding: 60px;
        background-color: #1e1e1e;
        border-radius: 14px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        color: white;
    }

    .login-card h2 {
        text-align: center;
        margin-bottom: 30px;
        font-weight: bold;
        font-size: 28px;
    }

    .btn-google {
        background-color: #db4437;
        color: white;
        border: none;
        padding: 16px;
        border-radius: 6px;
        width: 100%;
        font-weight: bold;
        font-size: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        transition: background 0.3s;
        margin-bottom: 26px;
    }

    .btn-google:hover {
        background-color: #c1351d;
    }

    .btn-google img {
        width: 22px;
        height: 22px;
    }

    .separator {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 30px 0;
        color: #bbb;
    }

    .separator::before,
    .separator::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid #444;
    }

    .separator span {
        padding: 0 12px;
        font-size: 14px;
    }

    .btn-primary {
        width: 100%;
        padding: 12px;
        font-size: 15px;
    }

    .form-group label,
    .form-check-label {
        color: #ddd;
        font-size: 14px;
    }

    .form-control {
        background-color: #2c2c2c;
        border: 1px solid #555;
        color: white;
        font-size: 15px;
        padding: 10px;
    }

    .form-control:focus {
        background-color: #2c2c2c;
        border-color: #888;
        box-shadow: none;
    }

    .form-check-input {
        background-color: #2c2c2c;
        border: 1px solid #555;
    }

    input[type="search"],
    .pesquisa input[type="text"] {
        background-color: #fff !important;
        color: #000 !important;
        border: 1px solid #ccc !important;
    }

    .pesquisa input::placeholder {
        color: #666 !important;
    }

    .pesquisa button {
        background-color: white !important;
        border: 1px solid #ccc !important;
    }
</style>

<div class="login-card">
    <h2>Iniciar Sess√£o</h2>

    <form asp-action="ExternalLogin" asp-controller="Utilizadors" method="post">
        <input type="hidden" name="provider" value="Google" />
        <button type="submit" class="btn-google">
            <img src="https://www.svgrepo.com/show/475656/google-color.svg" alt="Google" />
            Entrar com Google
        </button>
    </form>

    <div class="separator"><span>ou</span></div>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Lembrar-me</label>
        </div>

        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
