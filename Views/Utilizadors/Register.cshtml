@model SequeMusic.ViewModels.RegisterRequest

@{
    ViewData["Title"] = "Registo";
}

<style>
    .account-container {
        background-color: #1c1c1c;
        padding: 70px;
        border-radius: 16px;
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.45);
        max-width: 700px;
        margin: 60px auto;
        color: white;
    }

    .account-container h2 {
        margin-bottom: 30px;
        text-align: center;
        font-size: 32px;
    }

    .account-container .form-control {
        background-color: #e8f0fe;
        color: #000;
        height: 50px;
        font-size: 16px;
        padding: 10px 15px;
        border-radius: 8px;
    }

    .account-container .form-control::placeholder {
        color: #999;
    }

    .btn-success {
        background-color: #28a745;
        border-color: #28a745;
        width: 100%;
        height: 50px;
        font-size: 18px;
        font-weight: bold;
        border-radius: 8px;
        margin-top: 15px; 
    }

    .text-info {
        color: #17a2b8 !important;
    }

    .text-danger {
        color: #dc3545;
    }

    .text-center {
        text-align: center;
    }

    .mt-3 {
        margin-top: 1rem;
    }

    label {
        margin-top: 10px;
        margin-bottom: 5px;
        font-weight: 500;
        font-size: 15px;
    }
</style>

<div class="account-container">
    <h2>Registar</h2>

    <form asp-action="Register" asp-controller="Utilizadors" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" placeholder="Nome completo" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="email@exemplo.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" placeholder="••••••••" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataNascimento"></label>
            <input asp-for="DataNascimento" class="form-control" type="date" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telemovel"></label>
            <input asp-for="Telemovel" class="form-control" placeholder="912345678" />
            <span asp-validation-for="Telemovel" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Registar</button>
    </form>

    <div class="text-center mt-3">
        Já tens conta? <a asp-action="Login" asp-controller="Utilizadors" class="text-info">Entra aqui</a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
