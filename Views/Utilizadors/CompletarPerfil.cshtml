@model SequeMusic.Models.Utilizador

@{
    ViewData["Title"] = "Completar Perfil";
}

<!-- Estilos para o card -->
<style>
    .perfil-card {
        background-color: #1c1c1c;
        padding: 60px;
        border-radius: 16px;
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.45);
        max-width: 600px;
        margin: 60px auto;
        color: white;
    }

    .perfil-card h2 {
        margin-bottom: 30px;
        text-align: center;
        font-size: 30px;
        font-weight: bold;
    }

    .perfil-card label {
        margin-top: 10px;
        font-weight: 500;
        font-size: 15px;
    }

    .btn {
        min-width: 120px;
    }

    .mt-3 {
        margin-top: 1rem !important;
    }

    .text-danger {
        color: #dc3545;
    }
</style>

<div class="perfil-card">
    <h2>Completar Perfil</h2>

    <form asp-action="CompletarPerfil" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label asp-for="Telemovel" class="control-label"></label>
            <input asp-for="Telemovel" class="form-control" />
            <span asp-validation-for="Telemovel" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DataNascimento" class="control-label"></label>
            <input asp-for="DataNascimento" class="form-control" type="date" />
            <span asp-validation-for="DataNascimento" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Guardar</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary mt-3">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
